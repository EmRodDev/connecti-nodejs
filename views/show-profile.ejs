<main class="assistants container">
    <h1><%= namePage %></h1>

    <div class="info-user">
        <div class="image">
            <% if (user.image) {%>
                <img src="/uploads/profiles/<%= user.image %>">
            <% } %>
        </div>
        <div class="text">
            <%- user.description %>
        </div>
    </div><!--Info user-->
    <div class="groups-user">
        <% if(groups.length > 0) { %>
            <h2> Groups of: <%= user.name %></h2>
            <ul class="list-groups">
                <% groups.forEach(group => { %>
                    <li>
                        <div class="image">
                            <% if (group.image) {%>
                                <img src="/uploads/groups/<%= group.image %>">
                            <% } else { %>
                                <img src="/img/logo.png">
                            <% } %>
                        </div>
                        <div class="text">
                            <a href="/groups/<%= group.id %>">
                                <h3><%= group.name %></h3>
                            </a>
                        </div>
                    </li>
                <% }) %>
            </ul>
        
        <% } %>
    </div>
</main>