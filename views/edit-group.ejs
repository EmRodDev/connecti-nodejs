<main class="container container-forms no-padding">
    <h1><%= namePage %></h1>
    <form class="default-form" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" value="<%= group.name %>" name="name" placeholder="Group name">
        </div>
        <div class="field description">
            <label>Description</label>
            <div class="container-editor">
                <input type="hidden" id="x" name="description" value="<%= group.description %>">
                <trix-editor input="x">

                </trix-editor>
            </div>
        </div>
        <div class="field">
            <label>Category</label>
            <select name="categoryId">
                <option value="" disabled>-- Select a category --</option>
                <% categories.forEach(category => { %>
                    <option 
                    value="<%= category.id %>"
                    <%= (group.categoryId === category.id) ? 'selected' : '' %>
                    ><%= category.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="field">
            <label>Website</label>
            <input type="url" name="url" placeholder="Website" value="<%= group.url %>">
        </div>
        <div class="field send">
            <input type="submit" value="Save Changes" class="btn btn-rose">
        </div>
    </form>
</main>