<main class="container container-forms">
    <h1><%- namePage %></h1>

    <form action="/create-account" method="POST" class="default-form">
        <div class="field">
            <label>E-mail</label>
            <input type="email" name="email" placeholder="Your email">
        </div>
        <div class="field">
            <label>Name</label>
            <input type="text" name="name" placeholder="Your name">
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="Your password">
        </div>
        <div class="field">
            <label>Repeat password</label>
            <input type="password" name="repeat_password" placeholder="Repeat your password">
        </div>
        <div class="field send">
            <input type="submit" class="btn btn-rose" value="Create account">
        </div>
    </form>
</main>